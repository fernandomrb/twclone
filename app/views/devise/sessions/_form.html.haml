= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-group
    = f.text_field :login, placeholder: "Email or username", class: "form-control"
  .form-group
    = f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control"
  - if devise_mapping.rememberable?
    .checkbox
      %small
        = f.check_box :remember_me
        = f.label :remember_me
        = link_to "Forgot your password?", new_password_path(resource_name), class: "btn-link"
  = f.submit "Log in", class: "btn btn-block btn-primary"