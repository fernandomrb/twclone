if($(".modal").is(':visible')) {
	$(".modal").modal("toggle"); 
}
<% if @tweet.persisted? %>
		if($("#modal-tweet").is(':visible')) {
			$("#modal-tweet").modal("toggle");
		}
    <% if @tweet.parent_id.nil? %>
        $(".new-tweet .tweet-area").val("");
    <% else %>
        $(".reply-form .tweet-area").val("");
        $("#tweet_<%= @tweet.parent.id %> .footer .actions .reply .action-count span").text("<%= @tweet.parent.replies.count %>")
    <% end %>
    $(".tweets").prepend("<%= j render @tweet %>");
<% end %>