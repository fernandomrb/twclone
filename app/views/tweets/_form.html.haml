= form_for @tweet, html: { multipart: true} do |f|
	- if @tweet.errors.any? 
		%h3 
			= pluralize(@tweet.errors.count, "error") 
			prohibited this tweet from being saved:

		%ul
			- @tweet.errors.full_messages.each do |message|
				%li 
					= message

	.form-group					
		= f.text_area :body, class: "form-control", placeholder: "tweet something"
	.form-group	
		= f.submit "tweet", class: "btn btn-primary"