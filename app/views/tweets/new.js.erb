
<% if @retweet %>
    $("#modal-tweet .modal-title").text("Quote tweet");
    $(".modal-body").html("<%= j render "retweet_form" %>");
<% else %>
    $("#modal-tweet .modal-title").text("New tweet");
    $(".modal-body").html("<%= j render "form" %>");
<% end %>

$("#modal-tweet").modal("show");

$('#modal-tweet').on('shown.bs.modal', function () {
  $('.modal-body .tweet-area').focus()
});
