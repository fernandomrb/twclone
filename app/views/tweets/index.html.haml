.container.top-space
  .row
    .col-sm-5.col-md-4.col-lg-3.hidden-xs
      .profile-header
        = render "profiles/profile_header", user: current_user
    .col-sm-7
      .new-tweet
        .jumbotron
          .user-avatar
            = image_tag current_user.avatar_url(:thumb), class: "img-responsive img-rounded"
          = render "form"
      %ul.tweets
        = render @tweets
        %li.tweet.text-center.bottom-space
          %i.fa.fa-twitter
          No more tweets
          %small= link_to "Back to top", "#"
    = render "dialog"